<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <record model="ir.ui.view" id="contract_purchase_order_cotation_filter">
            <field name="name">contract.purchase.order.cotation.filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_request_for_quotation_filter"/>
            <field name="arch" type="xml">
                <field name="create_uid" position="after">
                    <field name="project_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="contract_purchase_order_filter">
            <field name="name">contract.purchase.order.filter</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="arch" type="xml">
                <field name="create_uid" position="after">
                    <field name="project_id"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="contract_purchase_order_form_view">
            <field name="name">contract.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <field name="partner_ref" position="after">
                    <field name="project_id"/>
                </field>
                <field name="picking_type_id" position="after">
                    <field name="prazo_entrega" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                </field>
                <page string="Deliveries &amp; Invoices" position="after">
                    <page string="Prorrogações de Entrega">
                        <field name="prorrogacao_entrega_ids" context="{'default_prazo_entrega_atual': prazo_entrega}">
                            <tree edit="false" delete="false" editable="bottom">
                                <field name="create_date" string="Data da Alteração" readonly="True"/>
                                <field name="prazo_entrega_atual" string="Prazo de Entrega Anterior"/>
                                <field name="novo_prazo_entrega"/>
                                <field name="motivo"/>
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>